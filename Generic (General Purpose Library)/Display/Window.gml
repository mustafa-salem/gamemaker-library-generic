/// ----------------------------------------------------------------------------
/// @function gpl_window_center(parameters)
/// ----------------------------------------------------------------------------
/// @description
/// <function_description>
/// ----------------------------------------------------------------------------
/// @parameter {type} parameter_name
/// <parameter_description>
///
/// ----------------------------------------------------------------------------
/// @return {undefined}
/// ----------------------------------------------------------------------------
function gpl_window_center(parameters = {}) {
    gpl_call_later({ delay_frames : 1, callback : window_center })
}

