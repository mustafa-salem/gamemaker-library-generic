/// ----------------------------------------------------------------------------
/// @function gpl_window_set_minimum_dimensions(arguments)
/// ----------------------------------------------------------------------------
/// @description
/// <function_description>
/// ----------------------------------------------------------------------------
function gpl_window_set_minimum_dimensions(arguments = {}) {
    if (struct_exists(arguments, "x")) {
        window_set_min_width(arguments.x)
    }
    if (struct_exists(arguments, "y")) {
        window_set_min_height(arguments.y)
    }
    return self
}

