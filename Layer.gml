function gpl_layer_create(parameters = {}) {
    layer_create(depth, [name])
    return undefined
}

/// ----------------------------------------------------------------------------
/// @function gpl_layer_destroy(parameters)
/// ----------------------------------------------------------------------------
/// @description
/// <function_description>
/// ----------------------------------------------------------------------------
/// @parameter {type} parameter_name
/// <parameter_description>
///
/// ----------------------------------------------------------------------------
/// @return {type}
/// <return_description>
/// ----------------------------------------------------------------------------
function gpl_layer_destroy(parameters = {}) {
    layer_destroy(layer_id)
    return undefined
}

